{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2021", "dom", "dom.iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src",
    "declaration": true,
    "incremental": false
  },
  "include": ["src/**/*.ts"]
}
