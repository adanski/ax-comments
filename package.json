{
  "name": "ax-comments",
  "title": "ax-comments",
  "version": "2.0.0",
  "author": {
    "name": "Adrian Z."
  },
  "maintainers": [
    {
      "name": "Adrian Z."
    }
  ],
  "description": "Standalone web component for implementing an out-of-the-box commenting solution to any web application with an existing backend",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/comments-element.d.ts",
        "default": "./dist/comments-element.js"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "bundle": "esbuild src/comments-element.ts --bundle --format=esm --platform=browser --target=esnext --outdir=dist",
    "test": "jest"
  },
  "files": [
    "dist/comments-element.d.ts",
    "src/comments-element.ts",
    "dist/comments-element.js.map"
  ],
  "homepage": "https://adanski.github.io/ax-comments/",
  "keywords": [
    "web component",
    "javascript",
    "plugin",
    "commenting",
    "discussion",
    "conversation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adanski/ax-comments.git"
  },
  "dependencies": {
    "@textcomplete/core": "~0.1.12",
    "@textcomplete/textarea": "~0.1.12",
    "sanitize-html": "~2.7.3"
  },
  "devDependencies": {
    "@types/node": "~14.18.33",
    "@types/jest": "~29.2.0",
    "@types/sanitize-html": "~2.6.2",
    "typescript": "~4.8.4",
    "tslib": "~2.4.1",
    "jest": "~29.2.2",
    "esbuild": "~0.15.12"
  }
}
