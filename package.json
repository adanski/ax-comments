{
  "name": "comments-web-component",
  "title": "comments-web-component",
  "version": "2.0.0",
  "author": {
    "name": "Joona Tykkylainen"
  },
  "contributors": [
    {
      "name": "Adrian Z."
    }
  ],
  "description": "Standalone web component for implementing an out-of-the-box commenting solution to any web application with an existing backend",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./src/comments-component.d.ts",
        "default": "./src/comments-component.js"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "minify": "terser src/jquery-comments.js --comments '/^!/' --output src/jquery-comments.min.js"
  },
  "files": [
    "src/comments.component.d.ts",
    "src/comments-component.ts",
    "src/comments.component.js.map"
  ],
  "homepage": "https://www.viima.com/",
  "keywords": [
    "web component",
    "javascript",
    "plugin",
    "commenting",
    "discussion",
    "conversation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Viima/jquery-comments.git"
  },
  "dependencies": {
    "cash-dom": "^8.1.1",
    "@textcomplete/core": "~0.1.12",
    "@textcomplete/contenteditable": "~0.1.12",
    "@textcomplete/textarea": "~0.1.12",
    "sanitize-html": "~2.6.1"
  },
  "devDependencies": {
    "@types/node": "~14.18.20",
    "@types/jest": "~28.1.0",
    "@types/sanitize-html": "~2.6.2",
    "typescript": "~4.7.4",
    "tslib": "~2.4.0",
    "terser": "~5.14.2",
    "jest": "~28.1.0",
    "karma": "~6.3.20",
    "karma-chrome-launcher": "~3.1.0"
  }
